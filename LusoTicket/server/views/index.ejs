<!DOCTYPE html>
<html>
  <head>

    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/carousel.css">
    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/carousel/">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <meta name="theme-color" content="#712cf9">
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
      
      
      <main>
        <header data-bs-theme="dark">
          <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">LusoTicket</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/locals">Locals</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/events">Events</a>
                  </li>
                  <% if(role === 'Admin' || role === 'Employee'){ %>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin" >ADMIN</a>
                  </li>
                  <% } %>
                  <li class="nav-item">
                    <a class="nav-link" href="/logout" >Logout</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        </header>
  
      <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class="active" aria-current="true"></button>
        </div>
        <div class="carousel-inner" >
          <% if(local.length>0) { %>
    
            <% for(var i = 0; i < 1;i++) { %>
              <div class="carousel-item active">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
                <div class="container">
                  <div class="carousel-caption text-end">
                    <h1><%= local[i].name%></h1>
                    <p><%= local[i].description%></p>
                    <img src="images/<%= local[i].images%>" alt="" width="55%" style="margin: auto; padding-bottom: 10px; max-width: 100%; height: auto;">
                    <p><a class="btn btn-lg btn-primary" style="width: 20%;" href="/locals/showlocals/<%= local[i].id%>">Learn more</a></p>
                  </div>
                </div>
              </div>
            <% } %>
        <% } else { %>
          <div>No Events found.</div>
        <% } %>
          <% if(local.length>0) { %>
    
            <% for(var i = 1; i < 3;i++) { %>
              <div class="carousel-item">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
                <div class="container">
                  <div class="carousel-caption text-end">
                    <h1><%= local[i].name%></h1>
                    <p><%= local[i].description%></p>
                    <img src="images/<%= local[i].images%>" alt="oceanario" width="35%" style="margin: auto; padding-bottom: 10px; max-width: 100%; height: auto;">
                    <p><a class="btn btn-lg btn-primary" href="/locals/showlocals/<%= local[i].id%>">Learn more</a></p>
                  </div>
                </div>
              </div>
            <% } %>
        <% } else { %>
          <div>No Events found.</div>
        <% } %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>    
  
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
      <% if(event.length>0) { %>
    
            <% for(var i=0; i<event.length;i++) { %>
                  <div class="col">
                    <div class="card shadow-sm">
                      <img class="bd-placeholder-img card-img-top" src="/images/<%= event[i].images%>" alt="" width="20%">
                      <div class="card-body">
                        <p class="card-text" style="text-align: center; font-size: large;"><%= event[i].name%></p>
                        <p class="card-text">Description:</p>
                        <p class="card-text description-limit">- <%= event[i].description%></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group" style="margin: auto;">
                            <form action="/events/showevents/<%= event[i].id%>" method="get">
                              <button type="submit" class="btn btn-primary mr-4" style="text-align: center; margin: auto;">View</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
            <% } %>
        <% } else { %>
          <div>No Events found.</div>
        <% } %>
      </div>
    </div>
    
        <!-- FOOTER -->
        <footer class="text-body-secondary py-5">
          <div class="container">
            <p class="float-end mb-1">
              <a href="#">Back to top</a>
            </p>
            <p class="mb-1">© 2022–2023</p>
            <p class="mb-0">Thanks for stoping by LusoTickets! <a href="/"> Visit the homepage!</a>.</p>
          </div>
        </footer>
      </main>

      <script>

        var mensagem = new URLSearchParams(window.location.search).get('mensagem');

        if(mensagem){
          alert(mensagem);
        }
        
      </script>
      
  </body>
</html>
